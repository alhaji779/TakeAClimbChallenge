<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.tic_tac_toe.secondActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/play_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Player X:"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/x_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/play_x"
                android:freezesText="true"
                android:padding="4dp"
                android:paddingBottom="4dp"
                android:paddingTop="3dp"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <Button
                android:id="@+id/changeboard2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#EF5350"
                android:layout_alignParentRight="true"
                android:text="Go to 3x3 board"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:onClick="move2"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/play_o"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/play_x"
                android:padding="8dp"
                android:paddingTop="4dp"
                android:text="Player O:"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/o_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/x_score"
                android:layout_toRightOf="@id/play_o"
                android:freezesText="true"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:paddingTop="4dp"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

        </RelativeLayout>

